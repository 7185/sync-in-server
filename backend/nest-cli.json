{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "typeCheck": true,
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      {
        "include": "./applications/files/assets"
      },
      {
        "include": "./common/fonts"
      }
    ]
  }
}
